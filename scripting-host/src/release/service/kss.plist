<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
  <dict>
    <key>Label</key>
    <string>net.edwardday.kss</string>

    <key>ProcessType</key>
    <string>Background</string>

    <key>Program</key>
    <string>{{DIRECTORY}}kss</string>

    <key>StandardOutPath</key>
    <string>{{LOG_DIRECTORY}}kss.log</string>

    <key>StandardErrorPath</key>
    <string>{{LOG_DIRECTORY}}kss-error.log</string>

    <key>WorkingDirectory</key>
    <string>{{WORKING_DIRECTORY}}</string>

    <key>RunAtLoad</key>
    <true/>

    <key>KeepAlive</key>
    <dict>
        <key>Crashed</key>
        <true/>
    </dict>

    <key>UserName</key>
    <string>{{USER}}</string>
  </dict>
</plist>
